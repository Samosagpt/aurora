# Samosa GPT Configuration File
# Copy this file to .env and fill in your API keys

# ============ API Keys ============

# OpenWeather API Key (OPTIONAL - AI web search is used by default)
# Get your free API key at: https://openweathermap.org/api
OPENWEATHER_API_KEY=YOUR_API_KEY_HERE

# News API Key (OPTIONAL - AI web search is used by default)
# Get your free API key at: https://newsapi.org/
NEWS_API_KEY=YOUR_API_KEY_HERE

# Hugging Face Token (for image generation, optional)
# Get your token at: https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=

# ============ Ollama Configuration ============

# Ollama Host URL
OLLAMA_HOST=http://localhost:11434

# Ollama API Key (optional, for remote Ollama instances)
OLLAMA_API_KEY=

# Default Ollama Model
DEFAULT_OLLAMA_MODEL=samosagpt

# Ollama Request Timeout (seconds)
OLLAMA_TIMEOUT=30

# ============ Web Search Settings ============

# Model to use for AI-powered web search
# You can use any Ollama model installed on your system
WEB_SEARCH_MODEL=samosagpt

# Enable AI-powered search features
ENABLE_AI_SEARCH=true

# ============ Application Settings ============

# Debug Mode (set to true for detailed logging)
DEBUG=false

# Allowed Hosts (comma-separated, for production)
ALLOWED_HOSTS=localhost,127.0.0.1

# ============ Rate Limiting ============

# Enable rate limiting
RATE_LIMIT_ENABLED=true

# Maximum requests per minute per user
MAX_REQUESTS_PER_MINUTE=60

# ============ Security Settings ============

# Session Secret Key (generate a random string)
SECRET_KEY=your-secret-key-here-change-in-production

# Enable CORS
ENABLE_CORS=false

# Allowed CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000

# ============ Logging Settings ============

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable Sentry Error Tracking (optional)
SENTRY_DSN=

# ============ Performance Settings ============

# Enable caching
ENABLE_CACHE=true

# Cache TTL in seconds
CACHE_TTL=3600

# Maximum conversation history length
MAX_CONVERSATION_LENGTH=50
